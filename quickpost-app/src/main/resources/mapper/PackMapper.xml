<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.app.mapper.PackMapper">

    <resultMap type="Pack" id="PackResult">
        <result property="packId"    column="pack_id"    />
        <!-- 为fileIds指定类型处理器 -->
        <result property="fileIds"    column="file_ids"
                typeHandler="com.abc.app.domain.entity.typehanlder.PackFileIdsTypeHandler"/>
        <result property="code"    column="code"    />
        <result property="validTimeType"    column="valid_time_type"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="status"    column="status"    />
        <result property="ver"    column="ver"    />
    </resultMap>

    <sql id="selectPackVo">
        select pack_id, file_ids, code, valid_time_type, user_id, create_time, update_time, status, ver from tb_pack
    </sql>

    <select id="selectPackList" parameterType="Pack" resultMap="PackResult">
        <include refid="selectPackVo"/>
        <where>
            <!-- 查询时使用类型处理器 -->
            <if test="fileIds != null ">
                and file_ids = #{fileIds, typeHandler=com.abc.app.domain.entity.typehanlder.PackFileIdsTypeHandler}
            </if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="validTimeType != null "> and valid_time_type = #{validTimeType}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="ver != null "> and ver = #{ver}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>

    <select id="selectPackByPackId" parameterType="Long" resultMap="PackResult">
        <include refid="selectPackVo"/>
        where pack_id = #{packId}
    </select>
    <select id="selectPackByPackCode"  resultMap="PackResult">
        <include refid="selectPackVo"/>
        where code = #{code} and status = #{status}
    </select>

    <insert id="insertPack" parameterType="Pack">
        insert into tb_pack
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="packId != null">pack_id,</if>
            <if test="fileIds != null">file_ids,</if>
            <if test="code != null">code,</if>
            <if test="validTimeType != null">valid_time_type,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="status != null">status,</if>
            <if test="ver != null">ver,</if>
            <if test="userId != null">user_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="packId != null">#{packId},</if>
            <!-- 插入时使用类型处理器 -->
            <if test="fileIds != null">
                #{fileIds, typeHandler=com.abc.app.domain.entity.typehanlder.PackFileIdsTypeHandler},
            </if>
            <if test="code != null">#{code},</if>
            <if test="validTimeType != null">#{validTimeType},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="status != null">#{status},</if>
            <if test="ver != null">#{ver},</if>
            <if test="userId != null">#{userId},</if>
        </trim>
    </insert>

    <update id="updatePack" parameterType="Pack">
        update tb_pack
        <trim prefix="SET" suffixOverrides=",">
            <!-- 更新时使用类型处理器 -->
            <if test="fileIds != null">
                file_ids = #{fileIds, typeHandler=com.abc.app.domain.entity.typehanlder.PackFileIdsTypeHandler},
            </if>
            <if test="code != null">code = #{code},</if>
            <if test="validTimeType != null">valid_time_type = #{validTimeType},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="status != null">status = #{status},</if>
            <if test="ver != null">ver = #{ver},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </trim>
        where pack_id = #{packId}
    </update>

    <delete id="deletePackByPackId" parameterType="Long">
        delete from tb_pack where pack_id = #{packId}
    </delete>

    <delete id="deletePackByPackIds" parameterType="String">
        delete from tb_pack where pack_id in
        <foreach item="packId" collection="array" open="(" separator="," close=")">
            #{packId}
        </foreach>
    </delete>
</mapper>
