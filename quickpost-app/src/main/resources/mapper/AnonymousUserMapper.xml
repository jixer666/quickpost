<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.app.mapper.AnonymousUserMapper">
    
    <resultMap type="AnonymousUser" id="AnonymousUserResult">
        <result property="anyUserId"    column="any_user_id"    />
        <result property="ip"    column="ip"    />
        <result property="createTime"    column="create_time"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectAnonymousUserVo">
        select any_user_id, ip, create_time, status from tb_anonymous_user
    </sql>

    <select id="selectAnonymousUserList" parameterType="AnonymousUser" resultMap="AnonymousUserResult">
        <include refid="selectAnonymousUserVo"/>
        <where>  
            <if test="ip != null  and ip != ''"> and ip = #{ip}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectAnonymousUserByAnyUserId" parameterType="Long" resultMap="AnonymousUserResult">
        <include refid="selectAnonymousUserVo"/>
        where any_user_id = #{anyUserId}
    </select>

    <insert id="insertAnonymousUser" parameterType="AnonymousUser">
        insert into tb_anonymous_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="anyUserId != null">any_user_id,</if>
            <if test="ip != null">ip,</if>
            <if test="createTime != null">create_time,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="anyUserId != null">#{anyUserId},</if>
            <if test="ip != null">#{ip},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <update id="updateAnonymousUser" parameterType="AnonymousUser">
        update tb_anonymous_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="ip != null">ip = #{ip},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where any_user_id = #{anyUserId}
    </update>

    <delete id="deleteAnonymousUserByAnyUserId" parameterType="Long">
        delete from tb_anonymous_user where any_user_id = #{anyUserId}
    </delete>

    <delete id="deleteAnonymousUserByAnyUserIds" parameterType="String">
        delete from tb_anonymous_user where any_user_id in 
        <foreach item="anyUserId" collection="array" open="(" separator="," close=")">
            #{anyUserId}
        </foreach>
    </delete>
</mapper>